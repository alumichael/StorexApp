<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/account_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_marginBottom="20dp"
           android:background="@color/colorWhite"
           android:layout_height="70dp">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="MY ACCOUNT"
               android:textColor="@color/colorPrimary"
               android:fontFamily="@font/sourcesanspro_bold"
               />
       </LinearLayout>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_thirty"
            android:layout_gravity="center"
            android:visibility="gone"
            app:indicatorColor="@color/colorAccent"
            app:indicatorName="BallPulseIndicator" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_margin="@dimen/size_fifteen"
            android:backgroundTint="@color/colorPrimary"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:padding="@dimen/size_six"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_shopping_cart_black_24dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/order_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1 "
                        android:layout_marginEnd="2dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Order in Progress"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/sourcesanspro_semibold"
                        android:textSize="18sp"
                        />
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/lastOrderdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Last Order date: 02.03.2019"
                android:layout_margin="@dimen/size_two"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="14sp"
                android:gravity="start"
                />

            <TextView
                android:id="@+id/order_id"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="ID: 48GHVFJKKIB"
                android:textColor="@color/colorPrimary"
                android:layout_margin="2dp"
                android:gravity="end"
                android:fontFamily="@font/sourcesanspro_regular"
                android:textSize="14sp"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/personal_info_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/colorWhite"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_eighteen"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_payment_black_24dp"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Payment Information"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginEnd="2dp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/sourcesanspro_regular"
                        android:textSize="20sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                        />
                </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/setting_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/colorWhite"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_eighteen"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_settings_black_24dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Setting"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textSize="20sp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                    />
            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>




</FrameLayout>
