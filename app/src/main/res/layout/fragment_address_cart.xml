<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_addr_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar"
            android:elevation="4dp"
            android:foregroundGravity="center"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/MyPopupTheme"
            app:theme="@style/MyToolBarTheme"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:title="storex"
            />
    </com.google.android.material.appbar.AppBarLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="center"
         android:layout_weight="1"
         >

         <com.shuhart.stepview.StepView
             android:id="@+id/step_view"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="16dp"
             app:sv_selectedCircleColor="@color/colorAccent"
             app:sv_selectedTextColor="@color/colorAccent"
             app:sv_stepLineWidth="1dp"
             app:sv_stepPadding="4dp"
             app:sv_nextTextColor="@color/colorAccent"
             app:sv_nextStepLineColor="@color/colorAccent"
             app:sv_doneCircleColor="@color/colorAccent"
             app:sv_doneStepLineColor="@color/colorAccent"
             app:sv_doneCircleRadius="12dp"
             app:sv_selectedCircleRadius="12dp"
             app:sv_selectedStepNumberColor="@color/colorPrimary"
             app:sv_stepViewStyle="@style/StepView"
             app:sv_doneStepMarkColor="@color/colorPrimary"
             app:sv_stepNumberTextSize="12sp"
             app:sv_animationType="Line"
             app:sv_stepsNumber="3"
             />
         <com.wang.avi.AVLoadingIndicatorView
             android:id="@+id/avi1"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/size_thirty"
             android:layout_gravity="center"
             android:visibility="gone"
             app:indicatorColor="@color/colorAccent"
             app:indicatorName="BallPulseIndicator" />
         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:scrollbars="vertical">
             <LinearLayout
                 android:id="@+id/non_empty_layout"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="ADDRESS"
                     android:fontFamily="@font/sourcesanspro_bold"
                     android:textSize="18sp"
                     android:layout_margin="10dp"
                     android:textColor="@color/colorPrimary"/>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:weightSum="2"
                     >
                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/inputLayoutFirstName"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/size_ten"
                         android:layout_marginLeft="@dimen/size_ten"
                         android:layout_marginRight="@dimen/size_ten"
                         >

                         <EditText
                             android:id="@+id/firstname_editxt"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:hint="First Name"
                             android:inputType="textPersonName"
                             android:fontFamily="@font/sourcesanspro_regular"
                             />
                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/inputLayoutLastName"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/size_ten"
                         android:layout_marginLeft="@dimen/size_ten"
                         android:layout_marginRight="@dimen/size_ten"
                         >

                         <EditText
                             android:id="@+id/lastnmae_editxt"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:hint="Last Name"
                             android:inputType="textEmailAddress"
                             android:fontFamily="@font/sourcesanspro_regular"
                             />
                     </com.google.android.material.textfield.TextInputLayout>

                 </LinearLayout>
                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/inputLayoutLastAddr1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/size_ten"
                     android:layout_marginLeft="@dimen/size_ten"
                     android:layout_marginRight="@dimen/size_ten"
                     >

                     <EditText
                         android:id="@+id/addr1_editxt"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:hint="Address 1"
                         android:inputType="text"
                         android:fontFamily="@font/sourcesanspro_regular"
                         />
                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/inputLayoutLastAddr2"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/size_ten"
                     android:layout_marginLeft="@dimen/size_ten"
                     android:layout_marginRight="@dimen/size_ten"
                     >

                     <EditText
                         android:id="@+id/addr2_editxt"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:hint="Address 2"
                         android:inputType="text"
                         android:fontFamily="@font/sourcesanspro_regular"
                         />
                 </com.google.android.material.textfield.TextInputLayout>

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/inputLayoutLastRegion"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/size_ten"
                     android:layout_marginLeft="@dimen/size_ten"
                     android:layout_marginRight="@dimen/size_ten"
                     >

                     <EditText
                         android:id="@+id/region_editxt"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:hint="Region"
                         android:inputType="text"
                         android:fontFamily="@font/sourcesanspro_regular"
                         />
                 </com.google.android.material.textfield.TextInputLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:weightSum="2"
                     >
                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/inputLayoutCity"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/size_ten"
                         android:layout_marginLeft="@dimen/size_ten"
                         android:layout_marginRight="@dimen/size_ten"
                         >

                         <EditText
                             android:id="@+id/city_editxt"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:hint="City"
                             android:inputType="text"
                             android:fontFamily="@font/sourcesanspro_regular"
                             />
                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/inputLayoutState"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/size_ten"
                         android:layout_marginLeft="@dimen/size_ten"
                         android:layout_marginRight="@dimen/size_ten"
                         >

                         <EditText
                             android:id="@+id/state_editxt"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:hint="State"
                             android:inputType="text"
                             android:fontFamily="@font/sourcesanspro_regular"
                             />
                     </com.google.android.material.textfield.TextInputLayout>

                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal"
                     android:weightSum="2"
                     >
                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/inputLayoutZipCode"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/size_ten"
                         android:layout_marginLeft="@dimen/size_ten"
                         android:layout_marginRight="@dimen/size_ten"
                         >

                         <EditText
                             android:id="@+id/zipcode_editxt"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:hint="Zip Code"
                             android:inputType="number"
                             android:fontFamily="@font/sourcesanspro_regular"
                             />
                     </com.google.android.material.textfield.TextInputLayout>

                     <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/inputLayoutCountry"
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="@dimen/size_ten"
                         android:layout_marginLeft="@dimen/size_ten"
                         android:layout_marginRight="@dimen/size_ten"
                         >

                         <EditText
                             android:id="@+id/country_editxt"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             android:hint="Country"
                             android:inputType="text"
                             android:fontFamily="@font/sourcesanspro_regular"
                             />
                     </com.google.android.material.textfield.TextInputLayout>

                 </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/sourcesanspro_semibold"
                     android:textColor="@color/colorPrimary"
                     android:textSize="16sp"
                     android:layout_margin="4dp"
                     android:text="Pick Shipping Region"/>

                 <Spinner
                     android:id="@+id/ship_region"
                     android:layout_margin="4dp"
                     android:elevation="6dp"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"/>




             </LinearLayout>

         </ScrollView>



         <Button
             android:id="@+id/update_profile_btn"
             android:layout_width="match_parent"
             android:layout_height="70dp"
             android:background="@color/colorPrimary"
             android:text="Save and Continue"
             android:textColor="@color/colorWhite"
             android:fontFamily="@font/sourcesanspro_semibold"
             android:textSize="19sp"
             android:layout_gravity="bottom|center"

             />

     </LinearLayout>


</LinearLayout>
