<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/filter_sheet_layout"
    android:padding="@dimen/size_four">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER BY PRICE"
        android:textSize="23sp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:textColor="@color/colorPrimary"/>
    <Spinner
        android:id="@+id/spinnner_size"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="@dimen/size_ten"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER BY SIZE"
        android:textSize="23sp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <Button
            android:id="@+id/xs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:text="XS"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableTint="@color/colorWhite"
            />
        <Button
            android:id="@+id/s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:text="S"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="#000000"
            />
        <Button
            android:id="@+id/m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:text="M"
            android:backgroundTint="#000000"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:id="@+id/l"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:text="L"
            android:backgroundTint="#000000"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"

            />
        <Button
            android:id="@+id/xl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/pentagon"
            android:text="XL"
            android:backgroundTint="#000000"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:id="@+id/xxl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:text="XXL"
            android:backgroundTint="#000000"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FILTER BY COLOR"
        android:layout_marginTop="@dimen/size_ten"
        android:textSize="23sp"
        android:fontFamily="@font/sourcesanspro_regular"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/light_brown"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableTint="@color/colorWhite"
            />
        <Button
            android:id="@+id/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:backgroundTint="@color/black"
            />
        <Button
            android:id="@+id/red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:backgroundTint="@color/red"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:id="@+id/blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:backgroundTint="@color/blue"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"

            />
        <Button
            android:id="@+id/purple"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/pentagon"
            android:backgroundTint="@color/purple"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            />
        <Button
            android:id="@+id/magenta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/pentagon"
            android:backgroundTint="@color/magenta"
            android:layout_margin="4dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Borderless"
            />


    </LinearLayout>

    <Button
        android:id="@+id/update_payment_detail_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="22sp"
        android:text="APPLY FILTERS"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/sourcesanspro_bold"
        android:textSize="23sp"
        android:layout_gravity="bottom|center"

        />






</LinearLayout>
