<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar"
            android:elevation="4dp"
            android:foregroundGravity="center"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/MyPopupTheme"
            app:theme="@style/MyToolBarTheme"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:title="Settings"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_thirty"
        android:layout_gravity="center"
        android:visibility="gone"
        app:indicatorColor="@color/colorAccent"
        app:indicatorName="BallPulseIndicator" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">
        <LinearLayout
            android:id="@+id/non_empty_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutFirstName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:layout_marginRight="@dimen/size_ten"
                    >

                    <EditText
                        android:id="@+id/firstname_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutLastName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:layout_marginRight="@dimen/size_ten"
                    >

                    <EditText
                        android:id="@+id/lastnmae_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Last Name"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutLastAddr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_ten"
                android:layout_marginLeft="@dimen/size_ten"
                android:layout_marginRight="@dimen/size_ten"
                >

                <EditText
                    android:id="@+id/addr1_editxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Address 1"
                    android:inputType="text"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutLastAddr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_ten"
                android:layout_marginLeft="@dimen/size_ten"
                android:layout_marginRight="@dimen/size_ten"
                >

                <EditText
                    android:id="@+id/addr2_editxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Address 2"
                    android:inputType="text"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputLayoutLastRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_ten"
                android:layout_marginLeft="@dimen/size_ten"
                android:layout_marginRight="@dimen/size_ten"
                >

                <EditText
                    android:id="@+id/region_editxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Region"
                    android:inputType="text"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:layout_marginRight="@dimen/size_ten"
                    >

                    <EditText
                        android:id="@+id/city_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="City"
                        android:inputType="text"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutState"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:layout_marginRight="@dimen/size_ten"
                    >

                    <EditText
                        android:id="@+id/state_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="State"
                        android:inputType="text"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutZipCode"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:layout_marginRight="@dimen/size_ten"
                    >

                    <EditText
                        android:id="@+id/zipcode_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Zip Code"
                        android:inputType="text"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputLayoutCountry"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:layout_marginLeft="@dimen/size_ten"
                    android:layout_marginRight="@dimen/size_ten"
                    >

                    <EditText
                        android:id="@+id/country_editxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Country"
                        android:inputType="text"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:layout_margin="4dp"
                android:text="Pick Shipping Region"/>

            <Spinner
                android:id="@+id/ship_region"
                android:layout_margin="4dp"
                android:elevation="@dimen/size_six"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>




        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/update_profile_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        android:text="Save Setting"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/sourcesanspro_semibold"
        android:textSize="19sp"
        android:layout_gravity="bottom|center"

        />










</LinearLayout>
