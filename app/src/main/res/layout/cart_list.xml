<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="@dimen/size_four"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_eight"
        android:orientation="horizontal"
       >
        <ImageView
            android:id="@+id/product_thumnail"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_shop"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3"
            >
              <TextView
                  android:id="@+id/product_name"
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="0dp"
                  android:text="CLOTH TITLE"
                  android:textColor="@color/colorPrimary"
                  android:fontFamily="@font/sourcesanspro_regular"
                  android:textSize="20sp"
                  />

                   <LinearLayout
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:gravity="center_vertical"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/quantity"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Qty: 1"
                           android:fontFamily="@font/sourcesanspro_regular"
                           android:textStyle="italic"
                           android:textSize="15sp"

                           />


                       <TextView
                           android:id="@+id/discount_price"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="$657744.00"
                           android:textSize="15sp"
                           android:textColor="@color/colorPrimary"
                           android:fontFamily="@font/sourcesanspro_bold"
                           android:layout_marginStart="@dimen/size_ten"

                           />
                       <LinearLayout
                           android:id="@+id/attribute_color"
                           android:layout_width="15dp"
                           android:layout_height="15dp"
                           android:layout_marginStart="@dimen/size_ten"
                           android:orientation="horizontal"
                           android:backgroundTint="@color/purple"
                           android:background="@drawable/pentagon"/>
                            <TextView
                                android:id="@+id/attribute_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="M"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="@font/sourcesanspro_regular"
                                android:layout_marginStart="@dimen/size_ten"
                                />
                   </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/edit_cart"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="start"
                android:layout_margin="@dimen/size_eight"
                app:srcCompat="@drawable/ic_edit_black_24dp"
                />

            <ImageView
                android:id="@+id/delete_cart"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/size_eight"
                app:srcCompat="@drawable/ic_delete_forever_white_24dp"
                />

        </LinearLayout>




    </LinearLayout>



</com.google.android.material.card.MaterialCardView>